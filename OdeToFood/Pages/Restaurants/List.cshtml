@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input asp-for="SearchTerm" type="search" class="form-control"/>
            <div class="input-group-append">
                <button class="btn btn-secondary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>
<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-large"
                   asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-search-plus"></i>
                </a>
                <a class="btn btn-large"
                   asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-page="./Edit">Add</a>

<div>@Model.Message</div>
